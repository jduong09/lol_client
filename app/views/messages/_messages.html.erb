<ul id="messages" >
<% if messages.length == 0 %>
<% else %>
  <% messages.each do |message| %>
    <% if message.sender_id == current_user.id %>
      <li class="user_message"><%= message.body %></li>
    <% else %>
      <li class="friend_message"><%= message.body %></li>
    <% end %>
  <% end %>
<% end %>
</ul>