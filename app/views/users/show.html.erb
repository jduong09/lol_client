<div class="user-show">
  <header>
    <nav>
      <div class="nav-left-side">
        <div id="play-btn">
          <div>Logo</div>
          <div id="pentagon">Play</div>
        </div>
        <ul>
          <li><a class="header-nav-active">Home</a></li>
          <li><a>TFT</a></li>
          <li><a>Clash</a></li>
        </ul>
      </div>

      <ul class="nav-right-side">
        <li><a>Profile</a></li>
        <li><a>Collection</a></li>
        <li><a>Loot</a></li>
        <li><a>Currency</a></li>
        <li><a>Profile</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <section class="main-content">
      <%= turbo_frame_tag "main" do %>
        <ul class="main-content-nav">
          <li class="main-content-active">Home</li>
          <li><%= link_to 'Overview', user_overview_path(@user) %></li>
          <li><a>Patch Notes</a></li>
        </ul>
        <%= render "users/home" %>
      <% end %>
    </section>
    <section class="friends">
      <ul class="friends-list">
      <% @friends.each do |friend| %> 
        <li><a><%= friend.username.capitalize() %></a></li>
      <% end %>
      </ul>

      <ul class="friends-extra">
        <li>Chat
        </li>
        <li>Missions</li>
      </ul>
      <aside class="minimize">
        <ul>
          <li>Das Kartoffel</li>
          <li>Uglymofo</li>
        </ul>
        <section>
          <h2>Das Kartoffel</h2>
          <section class="chatbox">
            Tryna run one?
          </section>
          <section class="new-message">
            Setting up
          </section> 
        </section>
      </aside>
    </section>
  </main>
</div>